{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": false,
    "allowImportingTsExtensions": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDeclarationOnly": false
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules", "client", "dist"]
}
